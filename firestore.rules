rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read for leads and public write for the form
    match /leads/{leadId} {
      allow read: if true;
      allow write: if true; // Allow public write for the form
    }
  }
}
